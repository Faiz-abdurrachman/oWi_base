# ===========================================
# GoldGuard AI - Environment Variables
# ===========================================
# Copy file ini ke .env dan isi dengan value Anda

# -------------------------------------------
# Blockchain Configuration
# -------------------------------------------
PRIVATE_KEY=your_private_key_here
BASE_SEPOLIA_RPC_URL=https://sepolia.base.org
BASESCAN_API_KEY=your_basescan_api_key_here

# -------------------------------------------
# Contract Addresses (setelah deploy)
# -------------------------------------------
NEXT_PUBLIC_VAULT_ADDRESS=0x...
NEXT_PUBLIC_USDC_ADDRESS=0x...
NEXT_PUBLIC_GOLD_ADDRESS=0x...

# -------------------------------------------
# Frontend Configuration
# -------------------------------------------
NEXT_PUBLIC_CHAIN_ID=84532
NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID=your_walletconnect_project_id
NEXT_PUBLIC_API_URL=http://localhost:3001

# -------------------------------------------
# Backend Configuration
# -------------------------------------------
PORT=3001
NODE_ENV=development

# Database (PostgreSQL atau SQLite untuk development)
# PostgreSQL: postgresql://user:password@localhost:5432/goldguard
# SQLite: file:./dev.db
DATABASE_URL=file:./dev.db

# Redis (opsional, untuk caching)
REDIS_URL=redis://localhost:6379

# JWT Secret (generate random string)
JWT_SECRET=your_super_secret_jwt_key_minimum_32_characters

# -------------------------------------------
# AI Configuration
# -------------------------------------------
# Dapatkan API key dari https://console.groq.com
GROQ_API_KEY=your_groq_api_key_here

# -------------------------------------------
# x402 Micropayments (opsional)
# -------------------------------------------
X402_FACILITATOR_ADDRESS=0x...
