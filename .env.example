# ============================================
# oWi AI - Environment Variables
# ============================================
# Copy this file to .env and fill in the values
# NEVER commit .env to git!

# ============================================
# BLOCKCHAIN CONFIGURATION
# ============================================

# Private key for deployment (WITHOUT 0x prefix)
# ⚠️ Use a NEW wallet for development, never your main wallet
PRIVATE_KEY=

# RPC URLs (optional - defaults work for most cases)
BASE_SEPOLIA_RPC_URL=https://sepolia.base.org
BASE_MAINNET_RPC_URL=https://mainnet.base.org

# Etherscan API key for contract verification (optional)
ETHERSCAN_API_KEY=

# ============================================
# CONTRACT ADDRESSES
# Fill these after deploying contracts
# ============================================

NEXT_PUBLIC_VAULT_ADDRESS=
NEXT_PUBLIC_USDC_ADDRESS=
NEXT_PUBLIC_GOLD_ADDRESS=
NEXT_PUBLIC_ORACLE_ADDRESS=

# ============================================
# API KEYS
# ============================================

# Coinbase Developer Portal - OnchainKit API Key
# Get it: https://portal.cdp.coinbase.com
NEXT_PUBLIC_ONCHAINKIT_API_KEY=

# Google AI Studio - Gemini API Key
# Get it: https://aistudio.google.com/apikey
GEMINI_API_KEY=

# ============================================
# BASE MINI APP CONFIGURATION
# ============================================

# Your app URL (use localhost for dev, production URL for deploy)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Chain: "sepolia" or "mainnet"
NEXT_PUBLIC_CHAIN=sepolia

# Farcaster Account Association
# Generate at: https://www.base.dev/preview?tab=account
# These are required for production Mini Apps
FARCASTER_HEADER=
FARCASTER_PAYLOAD=
FARCASTER_SIGNATURE=

# ============================================
# BACKEND CONFIGURATION
# ============================================

# Environment
NODE_ENV=development

# API URL (for frontend to call backend)
NEXT_PUBLIC_API_URL=http://localhost:8787

# Backend port
PORT=8787

# x402 Payment Configuration
PAYMENT_ADDRESS=
SKIP_PAYMENT=true

# ============================================
# OPTIONAL: EXTERNAL APIS
# ============================================

# For real gold price data (optional)
# GOLD_API_KEY=

# For analytics (optional)
# MIXPANEL_TOKEN=
