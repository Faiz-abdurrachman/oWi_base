# ===========================================
# GoldGuard AI - Environment Variables
# ===========================================
# Copy file ini ke .env dan isi dengan value Anda

# -------------------------------------------
# Blockchain Configuration (Foundry)
# -------------------------------------------
PRIVATE_KEY=your_private_key_here
BASE_SEPOLIA_RPC_URL=https://sepolia.base.org
BASESCAN_API_KEY=your_basescan_api_key_here

# -------------------------------------------
# Contract Addresses (auto-generated setelah deploy)
# -------------------------------------------
NEXT_PUBLIC_VAULT_ADDRESS=0x...
NEXT_PUBLIC_USDC_ADDRESS=0x...
NEXT_PUBLIC_GOLD_ADDRESS=0x...
NEXT_PUBLIC_ORACLE_ADDRESS=0x...

# -------------------------------------------
# Frontend Configuration
# -------------------------------------------
NEXT_PUBLIC_CHAIN_ID=84532
NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID=your_walletconnect_project_id
NEXT_PUBLIC_API_URL=http://localhost:3001

# OnchainKit API Key (opsional, untuk enhanced features)
# Dapatkan dari: https://portal.cdp.coinbase.com
NEXT_PUBLIC_ONCHAINKIT_API_KEY=your_onchainkit_api_key

# Mini App URL (untuk production)
NEXT_PUBLIC_APP_URL=https://goldguard.ai

# -------------------------------------------
# Backend Configuration
# -------------------------------------------
PORT=3001
NODE_ENV=development

# JWT Secret (generate random string min 32 karakter)
JWT_SECRET=your_super_secret_jwt_key_minimum_32_characters

# -------------------------------------------
# AI Configuration
# -------------------------------------------
# Dapatkan API key dari https://console.groq.com
GROQ_API_KEY=your_groq_api_key_here

# -------------------------------------------
# x402 Micropayments (untuk signal paywall)
# -------------------------------------------
X402_FACILITATOR_ADDRESS=0x...
X402_RECEIVER_ADDRESS=your_wallet_address_for_receiving_payments
