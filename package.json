{
  "name": "owi-ai",
  "version": "1.0.0",
  "description": "oWi AI - Autonomous Gold Trading Bot on Base",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:backend": "npm run dev --workspace=backend",
    "build": "npm run build --workspace=frontend && npm run build --workspace=backend",
    "build:frontend": "npm run build --workspace=frontend",
    "build:backend": "npm run build --workspace=backend",
    "test": "npm run test --workspaces --if-present",
    "forge:build": "cd contracts && forge build",
    "forge:test": "cd contracts && forge test -vvv",
    "forge:deploy": "cd contracts && forge script script/Deploy.s.sol --rpc-url base_sepolia --broadcast --verify",
    "export-abis": "node scripts/export-abis.js"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "base",
    "mini-app",
    "defi",
    "trading",
    "gold",
    "ai",
    "x402"
  ],
  "author": "oWi Team",
  "license": "MIT"
}
